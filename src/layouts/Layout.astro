---
import "../styles/global.css";

const {
  title = "GTM Vector",
  description = "Outbound GTM architecture built to scale.",
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-[#050505] text-white">
    <slot />
  </body>
</html>