---
import "../styles/global.css";
import Nav from "../components/Nav.astro";

const {
  title = "GTM Vector",
  description = "Outbound GTM architecture built to scale.",
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-[#050505] text-white">
    <header class="max-w-5xl mx-auto px-8 py-6 flex items-center justify-between gap-6">
      <a class="font-bold tracking-tight" href="/">GTM Vector</a>
      <Nav />
    </header>

    <slot />
  </body>
</html>
