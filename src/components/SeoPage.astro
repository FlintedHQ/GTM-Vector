---
import Layout from "../layouts/Layout.astro";
const { title, description, sections = [] } = Astro.props;
---
<Layout title={title} description={description}>
  <main class="max-w-5xl mx-auto px-8 py-20">
    <h1 class="text-5xl font-bold mb-6">{title}</h1>
    <p class="text-lg opacity-80 max-w-3xl">{description}</p>

    <div class="mt-12 flex flex-col gap-10">
      {sections.map((s) => (
        <section>
          <h2 class="text-2xl font-semibold">{s.h2}</h2>
          <div class="mt-4 flex flex-col gap-4">
            {s.paragraphs?.map((p) => (
              <p class="opacity-80 leading-relaxed">{p}</p>
            ))}
          </div>
        </section>
      ))}
    </div>

    <div class="mt-14 rounded-2xl border border-white/10 bg-white/5 p-8">
      <h3 class="text-xl font-semibold">Want this built for your team?</h3>
      <p class="opacity-80 mt-2">
        Book a free GTM audit. I’ll map your ICP, stack, and workflows and tell you exactly what to fix first.
      </p>
      <a class="inline-block mt-5 underline" href="/outbound-automation/">
        Start with Outbound Automation →
      </a>
    </div>
  </main>
</Layout>
