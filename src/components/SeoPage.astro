---
import Layout from "../layouts/Layout.astro";
import CTA from "./CTA.astro";

const { title, description, sections = [] } = Astro.props;
---

<Layout title={title} description={description}>
  <main class="max-w-5xl mx-auto px-8 py-16">
    <h1 class="text-5xl font-bold tracking-tight">{title}</h1>
    <p class="text-lg opacity-80 mt-5 max-w-3xl">{description}</p>

    <div class="mt-12 space-y-12">
      {sections.map((s) => (
        <section>
          <h2 class="text-2xl font-semibold">{s.h2}</h2>
          {(s.paragraphs ?? []).map((p) => (
            <p class="opacity-80 mt-4 leading-7">{p}</p>
          ))}
        </section>
      ))}
    </div>

    <CTA />
  </main>
</Layout>
